FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY taippa/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# Copy application source and the new entrypoint
COPY taippa /app/taippa
COPY main.py /app/main.py

# Expose port for the API
EXPOSE 8000

# Run the FastAPI app with Uvicorn via main.py
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
